{
	"name": "bot",
	"version": "1.0.0",
	"devDependencies": {
		"@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
		"@nomicfoundation/hardhat-network-helpers": "^1.0.0",
		"@nomicfoundation/hardhat-toolbox": "^2.0.0",
		"@nomicfoundation/hardhat-verify": "^1.1.1",
		"@types/chai": "^4.3.20",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.10.1",
		"chai": "^4.5.0",
		"dotenv": "^17.2.3",
		"hardhat": "^2.17.4",
		"hardhat-deploy": "^0.10.6",
		"solidity-coverage": "^0.8.16",
		"ts-node": "^10.2.1",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.18.0",
		"tslint-plugin-prettier": "^2.3.0",
		"typescript": "^4.3.2"
	},
	"scripts": {
		"run-env": "npm ci && tail -f /dev/null",
		"cp-typechain": "cp typechain/*.d.ts ./dist/types/typechain",
		"build": "tsc --project lib.tsconfig.json && npm run cp-typechain",
		"clean": "rm -rf artifacts/ dist/ typechain/",
		"compile": "npx hardhat compile",
		"node": "npx hardhat node --no-deploy",
		"deploy": "if [ \"$SKIP_COMPILE\" = 'true' ]; then echo '[Warning] Skipping compilation'; else npm run compile; fi && HARDHAT_NETWORK=xrplevm-testnet npx hardhat deploy --no-compile",
		"test": "HARDHAT_NETWORK=xrplevm-testnet MARKET_NAME=Aave npx hardhat test test/AaveV3LiquidationBot.ts",
		"bot": "HARDHAT_NETWORK=xrplevm-testnet ts-node scripts/AaveV3LiquidationBot.ts"
	},
	"dependencies": {
		"@aave/core-v3": "^1.19.3"
	}
}
